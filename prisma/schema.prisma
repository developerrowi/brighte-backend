generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Lead {
  id        String    @id @default(uuid())
  name      String
  email     String    @unique
  mobile    String
  postcode  String
  services  Service[] @relation("LeadServices")
  createdAt DateTime  @default(now())
}

model Service {
  id   String      @id @default(uuid())
  type ServiceType @unique
  leads Lead[]     @relation("LeadServices")
}

enum ServiceType {
  DELIVERY
  PICKUP
  PAYMENT
}
